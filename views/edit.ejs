    <h3>Edit Employee Details</h3>
    <form method="POST" action="/emps/<%= emp.id %>?_method=PUT">
        <p>Name: <input type="text" name="name" value="<%= emp.name %>" required></p>
        <p>Email: <input type="email" name="email" value="<%= emp.email %>" required></p>
        <p>Mobile: <input type="text" name="mobile" value="<%= emp.mobile %>" required></p>
        <p>Designation: 
            <select name="designation" required>
                <option value="HR" <%= emp.designation.includes('HR') ? 'selected' : '' %>>HR</option>
                <option value="Manager" <%= emp.designation.includes('Manager') ? 'selected' : '' %>>Manager</option>
                <option value="Sales" <%= emp.designation.includes('Sales') ? 'selected' : '' %>>Sales</option>
            </select>
        </p>
        <p>Gender: 
            <label><input type="radio" name="gender" value="Male" <%= emp.gender === 'Male' ? 'checked' : '' %>> Male</label>
            <label><input type="radio" name="gender" value="Female" <%= emp.gender === 'Female' ? 'checked' : '' %>> Female</label>
            <label><input type="radio" name="gender" value="Other" <%= emp.gender === 'Other' ? 'checked' : '' %>> Other</label>
        </p>
        <p>Courses:</p>
        <% for(let course of ['MCA', 'BCA', 'BSC']) { %>
            <label><input type="checkbox" name="course" value="<%= course %>" <%= emp.course.includes(course) ? 'checked' : '' %>> <%= course %></label><br>
        <% } %>
        <button type="submit">Save Changes</button>
    </form>
